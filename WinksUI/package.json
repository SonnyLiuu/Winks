{
  "name": "winksui",
  "version": "1.1.0",
  "description": "An Electron application with React and TypeScript",
  "main": "out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "lint:fix": "eslint --cache --fix --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir src/main",
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "build": "npm run typecheck && electron-vite build",
    "dist:win": "npm run build && electron-builder --win",
    "release:win": "npm run build && electron-builder --win --publish always",
    "postinstall": "electron-builder install-app-deps",
    "release:patch": "npm version patch -m \"chore(release): %s\"",
    "release:minor": "npm version minor -m \"chore(release): %s\"",
    "release:major": "npm version major -m \"chore(release): %s\"",
    "prerelease": "npm version prerelease --preid=beta -m \"chore(release): %s\""
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@hurdlegroup/robotjs": "^0.12.3",
    "@spaceymonk/react-radial-menu": "^2.0.6",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.3.9",
    "jsdom": "^26.1.0",
    "mongodb": "^6.17.0",
    "react-router-dom": "^7.6.2",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rollup/rollup-win32-x64-msvc": "^4.41.1",
    "@types/node": "^22.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^3.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5",
    "vite": "^5.3.5",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.winks.app",
    "productName": "Winks",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "out/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/@hurdlegroup/robotjs/**/*",
      "resources/**"
    ],
    "extraResources": [
      {
        "from": "../python",
        "to": "python"
      },
      {
        "from": "./python_runtime",
        "to": "python_runtime"
      }
    ],
    "win": {
      "target": "nsis",
      "executableName": "Winks"
    },
    "nsis": {
      "artifactName": "${productName}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": "always",
      "differentialPackage": true
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Application requests access to the device's camera.",
        "NSMicrophoneUsageDescription": "Application requests access to the device's microphone.",
        "NSDocumentsFolderUsageDescription": "Application requests access to the user's Documents folder.",
        "NSDownloadsFolderUsageDescription": "Application requests access to the user's Downloads folder."
      },
      "notarize": false
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "category": "Utility"
    },
    "appImage": {
      "artifactName": "${name}-install.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "SonnyLiuu",
      "repo": "Winks"
    }
  }
}
