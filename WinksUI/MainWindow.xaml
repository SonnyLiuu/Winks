<Window x:Class="WinksUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinksUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="161*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Display Assist Menu"/><LineBreak/><Run/></TextBlock>
        <RadioButton x:Name="DisplayAssistButton" Grid.Column="1" Content="Show" HorizontalAlignment="Left" Margin="158,168,0,0" VerticalAlignment="Top" IsChecked="True" Checked="HelloButton_Checked"/>
        <RadioButton x:Name="HideAssistButton" Grid.Column="1" Content="Hide" HorizontalAlignment="Left" Margin="401,168,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Apply" HorizontalAlignment="Center" Margin="0,308,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
