<Window x:Class="WinksUI.AssistMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinksUI"
        mc:Ignorable="d"
        Title="AssistMenu" Height="100" Width="200" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid>
        <StackPanel>
            <!-- Scroll up button -->
            <Button Name="UpButton" Content="↑" Click="UpButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" BorderBrush="Transparent" Focusable="False" IsTabStop="False"/>
            <!-- Scroll down button -->
            <Button Name="DownButton" Content="↓" Click="DownButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" BorderBrush="Transparent" Focusable="False" IsTabStop="False"/>
        </StackPanel>
    </Grid>
</Window>
